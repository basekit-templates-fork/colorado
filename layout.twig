<!doctype html>

<html class="no-js" lang="{{ page.seoLang }}">

<head>
	{% include "includes/head.twig" %}
</head>

<body class="{{ page.backgroundClass }}">

	{% include "includes/header.twig" %}

	<section class="content">
		{% block content %}
		{% endblock %}
	</section>

	{% include "includes/footer.twig" %}

    {% include basekit.bodyScript %}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script>window.jQuery || document.write('<script src="{{ asset('libs/jquery-1.10.2.min.js')}}"><\/script>')</script>
	<script src="{{ asset('js/fastclick.js')}}"></script>

	<script>
		$(function() {
		    FastClick.attach(document.body);
		});
	</script>

	<!-- Nav Menu Script -->
	<script>
		
    	// Toggles class open to display/hide the whole navigation
    	$( ".custom-navigation-toggle" ).click(function() {
  			$( ".bk-extendednavigation, .drop-down-nav" ).toggleClass( "open" );
		});

    	// Togglse class open to display/hide folders
		$( ".navigation-item.folder" ).each(function() {
			$( this ).click(function() {
	  			$( this ).toggleClass( "open" );
			});	
		});

	</script>

</body>

</html>
